@model dynamic

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" ng-app="liveChartsApp">

<head>
    <title>Live Charts</title>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <script src="https://use.typekit.net/tkh3uwr.js"></script>
    <script>
        try {
            Typekit.load({ async: true });
        } catch (e) {
        }
    </script>

    @Styles.Render("~/BannerContent/css")
</head>

<body>

<div class="container-fluid" id="banner-container">
    <div class="row">
        <div class="col-xs-12" id="banner">
            <div class="row">
                <a href="https://github.com/beto-rodriguez/Live-Charts" class="hidden-xs">
                    <img style="position: absolute; top: 0; right: 0; border: 0;" src="https://camo.githubusercontent.com/52760788cde945287fbb584134c4cbc2bc36f904/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f77686974655f6666666666662e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_white_ffffff.png">
                </a>
                <div class="col-xs-12 text-center" style="margin: 20px 0 0 0">
                    <img src="~/Content/Images/lvlogolight.png"/>
                </div>
            </div>
            <div class="row" style="margin-top: 25px;">
                <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12 text-center">
                    <h1 class="banner-title" style="margin: 15px 0; color: white;">
                        Modern, customizable and interactive data visualization.
                    </h1>
                    <h4 style="margin: 15px 0; color: white;">
                        Animated, Responsive, MVVM Friendly .net charts under the MIT license (free). LiveCharts listens for any data changes then updates and animates automatically.
                    </h4>
                </div>
            </div>
            <div class="row" style="margin-top: 15px;">
                <div class="col-xs-12 text-center">
                    <a class="main-link" href="/App/documentation/introduction">
                        <i class="fa fa-lg fa-book"></i> Documentation
                    </a>
                    <a class="main-link" href="https://github.com/beto-rodriguez/Live-Charts">
                        <i class="fa fa-lg fa-github"></i> Source Code
                    </a>
                    <a class="main-link" href="/App/examples/wpf/start">
                        <i class="fa fa-lg fa-bolt"></i> Examples
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12" id="window">
            <div class="row">
                <div class="col-xs-12" style="margin: 0; padding: 0;">
                    <img src="/Content/Images/mainwindow.jpg"/>
                    <img class="pull-right" src="/Content/Images/commands.jpg"/>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-xs-12 text-center">
                    <img src="/Content/Images/piew.gif"/>
                </div>
                <div class="col-sm-6 col-xs-12" style="margin-top: 40px;">
                    <h4>
                        As easy as manipulating any generic list in .Net, LiveCharts updates and animates as your data changes in real time, charts are also sensitive to size changes.
                    </h4>
                </div>
            </div>
            <div class="row" style="margin: 15px 0;">
                <div class="col-md-4 col-sm-6 text-center">
                    <img src="https://cloud.githubusercontent.com/assets/10853349/15808855/3b93ee82-2b48-11e6-946c-b064e7e1d1f2.gif"/>
                </div>
                <div class="col-md-4 col-sm-6 text-center">
                    <img src="https://cloud.githubusercontent.com/assets/10853349/15808860/3ba2da78-2b48-11e6-9599-aca30ea61ae2.gif"/>
                </div>
                <div class="col-md-4 col-sm-6 text-center">
                    <img src="https://cloud.githubusercontent.com/assets/10853349/15808856/3b9499ae-2b48-11e6-91a8-f74f6a1fd6dc.gif"/>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row" style="margin: 0 0 100px 0">
        <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">
            <div class="row">
                <div class="col-md-4 col-sm-6 col-xs-12 text-center">
                    <h1 class="text-center">
                        <i class="fa fa-2x text-muted fa-share-alt"></i>
                    </h1>
                    <h4>
                        An Open Source project maintained the Github community.
                    </h4>
                </div>
                <div class="col-md-4 col-sm-6 col-xs-12 text-center">
                    <h1 class="text-center">
                        <i class="fa fa-2x text-muted fa-pie-chart"></i>
                    </h1>
                    <h4>
                        13 different ways to display your data and counting, yes, you can also mix any series or chart.
                    </h4>
                </div>
                <div class="col-md-4 col-sm-6 col-xs-12 text-center">
                    <h1 class="text-center">
                        <i class="fa fa-2x text-muted fa-code"></i>
                    </h1>
                    <h4>
                        Plot any type you need directly in the chart, all you need is let LiveCharts knows the X and Y properties.
                    </h4>
                </div>
                <div class="col-md-4 col-sm-6 col-xs-12 text-center">
                    <h1 class="text-center">
                        <i class="fa fa-2x text-muted fa-tablet"></i>
                    </h1>
                    <h4>
                        Flexible code, we already support WPF and WinForms, planning to be in UWP and Xamarin at least.
                    </h4>
                </div>
                <div class="col-md-4 col-sm-6 col-xs-12 text-center">
                    <h1 class="text-center">
                        <i class="fa fa-2x text-muted fa-unlock"></i>
                    </h1>
                    <h4>
                        Permissive license, you can practically do whatever you want with this code, yes free.
                    </h4>
                </div>
                <div class="col-md-4 col-sm-6 col-xs-12 text-center">
                    <h1 class="text-center">
                        <i class="fa fa-2x text-muted fa-info-circle"></i>
                    </h1>
                    <h4>
                        Need help? the Github repo is full of examples, also this web site, you can also contact me for LiveHelp.
                    </h4>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid" style="background: #222E31; color: white">
    <div class="row" style="padding: 50px 0;">
        <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">
            <h4 class="text-center" style="margin-bottom: 20px;">You can practically customize every property to match your app design</h4>
            <div class="text-center">
                <img src="/Content/Images/lines.gif"/>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row" style="margin: 100px 0;">
        <div class="col-xs-12 text-center">
            <a href="/App/examples/wpf/start">
                <h1>Get Started Here</h1>
            </a>
        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="row" style="margin-top: 25px;">
        <div class="col-xs-12 text-center">
            <p class="text-muted">
                Live Charts is an open source project maintained by <a href="https://github.com/beto-rodriguez">Beto Rodríguez</a> and the git hub community, get involved and contribute
            </p>
            <p class="text-muted">
                Icons made by
                <a href="http://www.flaticon.com/authors/madebyoliver" title="Madebyoliver">Madebyoliver</a> and
                <a href="http://www.freepik.com" title="Freepik">Freepik</a>
                from <a href="http://www.flaticon.com" title="Flaticon">www.flaticon.com</a>
                is licensed by <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0" target="_blank">CC 3.0 BY</a><br/>
            </p>
            <p>
                <a href="/Home/PrivacyPolicy">Privacy Policy</a>
            </p>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/banner")

