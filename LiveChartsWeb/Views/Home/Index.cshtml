@model dynamic

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" ng-app="liveChartsApp">

<head>
    <title>Live Charts</title>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <script src="https://use.typekit.net/tkh3uwr.js"></script>
    <script>
        try {
            Typekit.load({ async: true });
        } catch (e) {
        }
    </script>

    @Styles.Render("~/BannerContent/css")
</head>

<body>

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12" id="banner">
            <div class="row">
                <a href="https://github.com/beto-rodriguez/Live-Charts" class="hidden-xs">
                    <img style="position: absolute; top: 0; right: 0; border: 0;" src="https://camo.githubusercontent.com/52760788cde945287fbb584134c4cbc2bc36f904/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f77686974655f6666666666662e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_white_ffffff.png">
                </a>
                <div class="col-xs-12 text-center" style="margin: 20px 0 0 0">
                    <img src="~/Content/Images/lvlogolight.png"/>
                </div>
            </div>
            <div class="row" style="margin-top: 25px;">
                <div class="col-md-6 col-md-offset-2 col-sm-offset-1 col-sm-8 col-xs-12">
                    <h1 class="banner-title" style="margin: 15px 0; color: white;">
                        Modern, customizable and interactive data visualization.
                    </h1>
                    <h4 style="margin: 15px 0; color: white;">
                        Animated, Responsive, MVVM Friendly .net charts under the MIT license (free). LiveCharts listens for any data changes then updates and animates automatically.
                    </h4>
                    <a class="btn btn-lg btn-default card-shadow" href="/App/examples/wpf/start" style="background: transparent; color: white">
                        Make your data come alive now
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid" style="background: white">
    <div class="row" style="margin-top: 50px">
        <div class="col-sm-1"></div>
        <div class="col-sm-5">
            <div class="presentation-wrapper">
                <h4 class="text-center">Responsive</h4>
                <div class="img-banner-wrapper">
                    <span class="helper"></span>
                    <img class="loading" src="~/Content/Images/responsive.gif"/>
                </div>
                <p class="text-muted text-center">
                    As easy as manipulating any generic list in .Net, LiveCharts updates and animates your data changes in real time, charts are also sensitive to size changes.
                </p>
            </div>
        </div>
        <hr class="visible-xs"/>
        <div class="col-sm-5">
            <div class="presentation-wrapper">
                <h4 class="text-center">Modern Design</h4>
                <div class="img-banner-wrapper">
                    <span class="helper"></span>
                    <img class="loading" src="~/Content/Images/modern.png"/>
                </div>
                <p class="text-muted text-center">
                    A @DateTime.Now.ToString("yyyy") design, many charts and series to represent your data, you can also combine them all, all the charts are easy to style to your needs.
                </p>
            </div>
        </div>
    </div>
    <hr/>
    <div class="row" style="margin-top: 20px;">
        <div class="col-sm-1"></div>
        <div class="col-sm-5">
            <div class="presentation-wrapper">
                <h4 class="text-center">Advanced features</h4>
                <div class="img-banner-wrapper">
                    <span class="helper"></span>
                    <img class="loading" src="~/Content/Images/zooming and panning.gif"/>
                </div>
                <p class="text-muted text-center">
                    Zooming, panning, multi axes and more features.
                </p>
            </div>
        </div>
        <hr class="visible-xs"/>
        <div class="col-sm-5">
            <div class="presentation-wrapper">
                <h4 class="text-center">Plot any type you need</h4>
                <div class="img-banner-wrapper">
                    <span class="helper"></span>
                    <img class="loading" src="~/Content/Images/generics.gif"/>
                </div>
                <p class="text-muted text-center">
                    You can plot any type, without losing the benefits from a strongly typed language.
                </p>
            </div>
        </div>
    </div>
    <div class="row" style="margin: 85px 0;">
        <div class="col-xs-12 text-center">
            <a href="/App/examples/wpf/start" >
                <h2>Get Started Here</h2>
            </a>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row" style="margin-top: 100px;">
        <div class="col-sm-offset-5 col-sm-2 text-center">
            <a href="https://github.com/beto-rodriguez/Live-Charts">
                <img style="max-width: 150px; -ms-opacity: .65; opacity: .65;" src="~/Content/Images/GitHub-Logo.png"/>
            </a>
        </div>
    </div>
    <div class="row" style="margin-top: 25px;">
        <div class="col-xs-12 text-center">
            <p class="text-muted">
                Live Charts is an open source project maintained by <a href="https://github.com/beto-rodriguez">Beto Rodríguez</a> and the git hub community, get involved and contribute
            </p>
            <p class="text-muted">
                Icons made by
                <a href="http://www.flaticon.com/authors/madebyoliver" title="Madebyoliver">Madebyoliver</a> and
                <a href="http://www.freepik.com" title="Freepik">Freepik</a>
                from <a href="http://www.flaticon.com" title="Flaticon">www.flaticon.com</a>
                is licensed by <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0" target="_blank">CC 3.0 BY</a><br/>
            </p>
            <p>
                <a href="/Home/PrivacyPolicy">Privacy Policy</a>
            </p>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/banner")

<script>
    (function(i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r;
        i[r] = i[r] || function() {
            (i[r].q = i[r].q || []).push(arguments);
        }, i[r].l = 1 * new Date();
